{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": false,
  "automergeType": "pr",
  "automergeStrategy": "squash",
  "extends": ["config:recommended"],
  "pre-commit": {
    "enabled": true
  },
  "dependencyDashboard": false,
  "prConcurrentLimit": 1,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "prPriority": -1
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "prPriority": 10
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": true,
      "prPriority": 5
    },
    {
      "matchManagers": ["pre-commit"],
      "automerge": true,
      "prPriority": 4
    },
    {
      "matchManagers": ["gomod"],
      "automerge": true,
      "prPriority": 3
    },
    {
      "matchManagers": ["npm"],
      "automerge": true,
      "prPriority": 2
    },
    {
      "matchManagers": ["cargo"],
      "automerge": true,
      "prPriority": 1
    },
    {
      "matchPackageNames": ["@chakra-ui/react"],
      "allowedVersions": "^2.0.0"
    },
    {
      "matchPackageNames": ["github.com/loft-sh/api/v4"],
      "allowedVersions": "v4.3.0-devpod.alpha.31"
    },
    {
      "matchPackageNames": ["github.com/tailscale/tailscale"],
      "allowedVersions": "v1.92.2"
    },
    {
      "matchPackageNames": ["gopkg.in/yaml.v2"],
      "allowedVersions": "v2.4.0"
    }
  ]
}
